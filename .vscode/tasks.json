{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=ON -B build",
            "group": "build"
        },
        {
            "label": "Build Ray Tracer",
            "type": "shell",
            "command": "cd build && make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["CMake Configure"]
        },
        {
            "label": "Run Ray Tracer",
            "type": "shell",
            "command":"./build/raytracer",
            "group": {
                "kind": "test",
                "isDefault": true
            }

        },
        {
            "type": "process",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++17",
                "-fopenmp",  // Add OpenMP flag here
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}